doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    title Kirjaudu sisään
    
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/login.css')
    
    script(src='/libs/fullcalendar/lib/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
  body
    div(class='container')
    
      div(class='panel panel-default')
        div(class='panel-heading') 
          h1 
            span(class='glyphicon glyphicon-log-in')
            | &nbsp;Kirjaudu sisään
        div(class='panel-body')
          form(role='form', action='/login', method='post')
            div(class='form-group')
              label(for='usernameInputField') Käyttäjätunnus
              div(class='input-group')
                span(class='input-group-addon glyphicon glyphicon-user')
                input(name='email' type='text', class='form-control', id='usernameInputField', placeholder='')
            div(class='form-group')
              label(for='passwordInputField') Salasana
              div(class='input-group')
                span(class='input-group-addon glyphicon glyphicon-lock')
                input(name='password', type='password', class='form-control', id='passwordInputField', placeholder='')
            button(class='btn btn-warning btn-lg') Kirjaudu 
  